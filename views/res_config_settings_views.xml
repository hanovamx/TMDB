<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.custom.addon</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <form position="inside">
                    <app data-string="TMDB Settings" string="TMDB Settings" name="tmdb_settings" logo="/base/static/description/settings.png">
                        <block title="TMDB Configuration" id="tmdb_settings">
                            <setting id="tmdb_api_key_setting" string="TMDB API Key" help="Configure your TMDB API key for movie data access">
                                <div class="content-group">
                                    <div class="mt16">
                                        <label for="tmdb_api_key" string="API Key" class="col-3 col-lg-3 o_light_label"/>
                                        <field name="tmdb_api_key" class="oe_inline" placeholder="Enter your TMDB API key"/>
                                    </div>
                                </div>
                            </setting>
                            <setting id="tmdb_base_url_setting" string="TMDB Base URL" help="Configure the TMDB API base URL">
                                <div class="content-group">
                                    <div class="mt16">
                                        <label for="tmdb_base_url" string="Base URL" class="col-3 col-lg-3 o_light_label"/>
                                        <field name="tmdb_base_url" class="oe_inline" placeholder="https://api.themoviedb.org/3"/>
                                    </div>
                                </div>
                            </setting>
                        </block>
                    </app>
                </form>
            </field>
        </record>
    </data>
</odoo> 