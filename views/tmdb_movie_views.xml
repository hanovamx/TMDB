<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- TMDB Movie Tree View -->
        <record id="view_tmdb_movie_tree" model="ir.ui.view">
            <field name="name">tmdb.movie.tree</field>
            <field name="model">tmdb.movie</field>
            <field name="arch" type="xml">
                <list string="TMDB Movies">
                    <field name="tmdb_id"/>
                    <field name="title"/>
                    <field name="release_date"/>
                    <field name="vote_average"/>
                    <field name="popularity"/>
                    <field name="last_sync"/>
                </list>
            </field>
        </record>

        <!-- TMDB Movie Form View -->
        <record id="view_tmdb_movie_form" model="ir.ui.view">
            <field name="name">tmdb.movie.form</field>
            <field name="model">tmdb.movie</field>
            <field name="arch" type="xml">
                <form string="TMDB Movie">
                    <header>
                        <button name="sync_from_tmdb" string="Sync from TMDB" type="object" 
                                class="oe_highlight" invisible="tmdb_id == False"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="tmdb_id"/>
                                <field name="title"/>
                                <field name="original_title"/>
                                <field name="release_date"/>
                            </group>
                            <group>
                                <field name="vote_average"/>
                                <field name="vote_count"/>
                                <field name="popularity"/>
                                <field name="active"/>
                            </group>
                        </group>
                        <group>
                            <field name="overview" placeholder="Movie overview..."/>
                        </group>
                        <group>
                            <field name="poster_path"/>
                            <field name="backdrop_path"/>
                            <field name="last_sync"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- TMDB Movie Search View -->
        <record id="view_tmdb_movie_search" model="ir.ui.view">
            <field name="name">tmdb.movie.search</field>
            <field name="model">tmdb.movie</field>
            <field name="arch" type="xml">
                <search string="Search TMDB Movies">
                    <field name="title"/>
                    <field name="tmdb_id"/>
                    <separator/>
                    <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                    <filter string="Inactive" name="inactive" domain="[('active', '=', False)]"/>
                    <group expand="0" string="Group By">
                        <filter string="Release Date" name="group_by_date" context="{'group_by': 'release_date:month'}"/>
                        <filter string="Vote Average" name="group_by_vote" context="{'group_by': 'vote_average'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- TMDB Movie Action -->
        <record id="action_tmdb_movie" model="ir.actions.act_window">
            <field name="name">TMDB Movies</field>
            <field name="res_model">tmdb.movie</field>
            <field name="view_mode">list,form</field>
            <field name="context">{'search_default_active': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No movies found!
                </p>
                <p>
                    Sync movies from TMDB to get started.
                </p>
            </field>
        </record>

        <!-- Menu Items -->
        <menuitem id="menu_tmdb_root" 
                  name="TMDB" 
                  sequence="10"/>

        <menuitem id="menu_tmdb_movie" 
                  name="Movies" 
                  parent="menu_tmdb_root" 
                  action="action_tmdb_movie" 
                  sequence="10"/>
    </data>
</odoo> 